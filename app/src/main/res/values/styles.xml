<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="selector" parent="android:Widget.TextView">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:freezesText">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_black_24dp</item>
    </style>

    <style name="exchanger" parent="android:Widget.ImageButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:drawableRight">@drawable/ic_import_export_black_24dp</item>
    </style>
</resources>
